<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">
    
    <persistence-unit name="HospitalProject" transaction-type="RESOURCE_LOCAL">             
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.model.User</class>
        
        <class>com.hospitalproject.model.User</class>
        <class>com.hospitalproject.model.Patient</class>
        <class>com.hospitalproject.model.Doctor</class>
        <class>com.hospitalproject.model.Appointment</class>
        <class>com.hospitalproject.model.Department</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hospital_project"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        
        </properties>
    </persistence-unit>
</persistence>
